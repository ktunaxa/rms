<div>
	<h1>Create referral</h1>
	<table>
		<tr>
			<td>
				<label>
					Referral id:<br/>
					<input type="text" name="referralId" placeholder="REF01" autofocus="true"/>
					<input type="hidden" name="referralId_required" value="true"/>
					<input type="hidden" name="referralId_type" value="String"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Project name:<br/>
					<textarea name="referralName" placeholder="Name for referral"></textarea>
					<input type="hidden" name="referralName_required" value="false"/>
					<input type="hidden" name="referralName_type" value="String"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Referral e-mail:<br/>
					<input type="email" name="requesterEmail" placeholder="e-mail"/>
					<input type="hidden" name="requesterEmail_required" value="true"/>
					<input type="hidden" name="requesterEmail_type" value="String"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Engagement level:<br/>
					<input type="number" name="engagementLevel" min="0" max="3" placeholder="between 0 and 3"/>
					<input type="hidden" name="engagementLevel_required" value="true"/>
					<input type="hidden" name="engagementLevel_type" value="Integer"/>
				</label>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Completion deadline:<br/>
					<input type="date" name="completionDeadline"/>
					<input type="hidden" name="completionDeadline_required" value="false"/>
					<input type="hidden" name="completionDeadline_type" value="Date"/>
				</label><br/>
			</td>
		</tr>
	</table>
</div>