<div>
	<h1>Review referral</h1>
	<p><a href="http://localhost:8080/map/?r=${referralId}">Referral in mapping dashboard</a></p>
	<table>
		<tr>
			<td>
				<label>
					Referral id:<br/>
					<input type="text" name="referralId" value="${referralId}" placeholder="REF01" autofocus="true"/>
					<input type="hidden" name="referralId_required" value="true"/>
					<input type="hidden" name="referralId_type" value="String"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Completion deadline:<br/>
					<input type="date" name="completionDeadline" value="${completionDeadline}"/>
					<input type="hidden" name="completionDeadline_required" value="true"/>
					<input type="hidden" name="completionDeadline_type" value="Date"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Description:<br/>
					<textarea name="description" value="" placeholder="description for referral">${description}</textarea>
					<input type="hidden" name="description_required" value="false"/>
					<input type="hidden" name="description_type" value="String"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Referral e-mail:<br/>
					<input type="email" name="requesterEmail" value="${requesterEmail}" placeholder="e-mail"/>
					<input type="hidden" name="requesterEmail_required" value="true"/>
					<input type="hidden" name="requesterEmail_type" value="String"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Engagement level:<br/>
					<input type="number" name="engagementLevel" value="${engagementLevel}" min="0" max="3" placeholder="between 0 and 3"/>
					<input type="hidden" name="engagementLevel_required" value="true"/>
					<input type="hidden" name="engagementLevel_type" value="Integer"/>
				</label>
			</td>
		</tr>
	</table>
</div>