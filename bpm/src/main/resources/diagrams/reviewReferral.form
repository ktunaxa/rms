<div>
	<h1>Review referral</h1>
	<p>Referral in mapping dashboard</p>
	<table>
		<tr>
			<td>
				<label>
					Referral id:<br/>
					${ktunaxa.getReferralIdLink(execution)}
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Completion deadline:<br/>
					<input type="date" name="completionDeadline" value="${completionDeadline}"/>
					<input type="hidden" name="completionDeadline_required" value="true"/>
					<input type="hidden" name="completionDeadline_type" value="Date"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Referral name:<br/>
					<textarea name="referralName" value="" placeholder="Name for referral">${referralName}</textarea>
					<input type="hidden" name="referralName_required" value="false"/>
					<input type="hidden" name="referralName_type" value="String"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Referral e-mail:<br/>
					<input type="email" name="requesterEmail" value="${requesterEmail}" placeholder="e-mail"/>
					<input type="hidden" name="requesterEmail_required" value="true"/>
					<input type="hidden" name="requesterEmail_type" value="String"/>
				</label><br/>
			</td>
		</tr>
		<tr>
			<td>
				<label>
					Engagement level:<br/>
					<input type="number" name="engagementLevel" value="${engagementLevel}" min="0" max="3" placeholder="between 0 and 3"/>
					<input type="hidden" name="engagementLevel_required" value="true"/>
					<input type="hidden" name="engagementLevel_type" value="Integer"/>
				</label>
			</td>
		</tr>
	</table>
</div>